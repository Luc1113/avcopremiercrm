rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is in team members
    function isTeamMember() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/teamMembers/$(request.auth.token.email));
    }
    
    // Accounts collection - all authenticated users can read/write
    match /accounts/{accountId} {
      allow read, write: if isSignedIn();
    }
    
    // Contacts collection - all authenticated users can read/write
    match /contacts/{contactId} {
      allow read, write: if isSignedIn();
    }
    
    // Activities collection - all authenticated users can read/write
    match /activities/{activityId} {
      allow read, write: if isSignedIn();
    }
    
    // Sales collection - all authenticated users can read/write
    match /sales/{saleId} {
      allow read, write: if isSignedIn();
    }
    
    // Team members collection - all authenticated users can read, only create own record
    match /teamMembers/{memberId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false; // Prevent modifications for now
    }
  }
}
